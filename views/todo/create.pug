extends ../layouts/design.pug
block content
 h1 Create Todo
 if errors
  each error in errors
   .alert.alert-danger=error
 form(action="/todo/create", method="POST", class="d-flex")
  label(for="title") Title
  input#title(class="form-control ml-2 mr-2", name="title", type="text", value=values ? values.title : "")
  label(for="description") Description
  input#desciption(class="form-control ml-2 mr-2", name="description", type="text", value=values ? values.description : "")
  button(class="btn btn-outline-danger") Create