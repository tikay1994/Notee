extends ../layouts/design.pug
block content
 h1 Create User
 if errors
  each error in errors
   .alert.alert-danger=error
 form(action="/users/create", method="POST", class="d-flex")
  label(for="name")
  input#name(class="form-control ml-2 mr-2", placeholder="Name", name="name", type="text", value=values ? values.name : "")
  label(for="email")
  input#email(class="form-control ml-2 mr-2",placeholder="Email", name="email", type="text", value=values ? values.email : "")
  label(for="password")
  input#password(class="form-control ml-2 mr-2",placeholder="Password", name="password", type="password", value=values ? values.password : "")
  label(for="repeat")
  input#repeat(class="form-control ml-2 mr-2",placeholder="Repeat", name="repeat", type="password")
  button(class="btn btn-outline-danger") Create